{
  "compilerOptions": {
    "target": "es2016",

    "experimentalDecorators": true,

    "module": "commonjs",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@config/*": ["./config/*"],
      "@shared/*": ["./shared/*"]
    },

    "outDir": "./dist",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  }
}
